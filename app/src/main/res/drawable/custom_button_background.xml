<!-- res/drawable/custom_white_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0"/> <!-- Màu xám nhẹ khi nhấn -->
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Màu trắng mặc định -->
            <stroke android:width="2dp" android:color="#DDDDDD"/> <!-- Viền mỏng màu xám nhạt -->
        </shape>
    </item>
</selector>
