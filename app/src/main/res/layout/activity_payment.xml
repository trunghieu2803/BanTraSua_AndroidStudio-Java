<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/payment"
    >
    <LinearLayout
        android:id="@+id/linearlayoutpayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="Payment"
        android:textSize="36sp" />
    <!-- Full Name -->
    <TextView
        android:id="@+id/edittextfullnamepayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittextlogin"
        android:hint="Full Name"
        android:padding="16dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textpricepayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittextlogin"
        android:hint="Giá tiền"
        android:padding="16dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/textphonepayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittextlogin"
        android:hint="Phone"
        android:inputType="number"
        android:padding="16dp"
        android:textSize="18sp" />
        <EditText
            android:id="@+id/textaddresspayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittextlogin"
            android:hint="Address"
            android:padding="16dp"
            android:textSize="18sp" />



    <!-- Nút Đăng ký và Hủy -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonconfirmpayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Confirm"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttoncancelpayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="20dp" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>